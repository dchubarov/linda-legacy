<l-system xmlns="http://chubarov.net/Lindenmayer" version="1.0">
    <description>Hexagonal Gosper curve</description>

    <rules axiom="L">
        <rule symbol="L" mean="F">L+R++R-L--LL-R+</rule>
        <rule symbol="R" mean="F">-L+RR++R+L--L-R</rule>
    </rules>
    <options>
        <option name="defaultOrder">4</option>
        <option name="turtle.turnAngle">60</option>
    </options>
</l-system>